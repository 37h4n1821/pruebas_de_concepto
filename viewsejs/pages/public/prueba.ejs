                            <div class="form-group">
                                <select class="form-select" id="registerCampus">
                                    <option selected disabled>Selecciona una sede</option>
                                    <option value="norte">Campus Norte</option>
                                    <option value="sur">Campus Sur</option>
                                    <option value="este">Campus Este</option>
                                    <option value="oeste">Campus Oeste</option>
                                    <option value="central">Campus Central</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <select class="form-select" id="registerSchedule">
                                    <option selected disabled>Selecciona una jornada</option>
                                    <option value="matutina">Matutina</option>
                                    <option value="vespertina">Vespertina</option>
                                    <option value="nocturna">Nocturna</option>
                                    <option value="fin_semana">Fin de semana</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <select class="form-select" id="registerCareer">
                                    <option selected disabled>Selecciona una carrera</option>
                                    <option value="ingenieria">Ingeniería de Sistemas</option>
                                    <option value="medicina">Medicina</option>
                                    <option value="derecho">Derecho</option>
                                    <option value="administracion">Administración de Empresas</option>
                                    <option value="contabilidad">Contabilidad</option>
                                    <option value="psicologia">Psicología</option>
                                    <option value="educacion">Educación</option>
                                    <option value="arquitectura">Arquitectura</option>
                                </select>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="termsCheck" required>
                                <label class="form-check-label" for="termsCheck">Acepto los <a href="#">términos y condiciones</a></label>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-user btn-block w-100 mb-3">
                            Crear cuenta
                        </button>
                    </form>
                    
                    <div class="auth-footer">
                        ¿Ya tienes una cuenta? <a href="#" id="goToLogin">Inicia sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap & jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Alternar visibilidad de contraseña
            $('.password-toggle').click(function() {
                const input = $(this).prevAll('input');
                const type = input.attr('type') === 'password' ? 'text' : 'password';
                input.attr('type', type);
                
                // Cambiar icono
                $(this).toggleClass('fa-eye fa-eye-slash');
            });
            
            // Mostrar/ocultar campos de estudiante
            $('#isStudentCheck').change(function() {
                if(this.checked) {
                    $('#studentFields').slideDown(300);
                    // Hacer requeridos los campos de estudiante
                    $('#registerCampus, #registerSchedule, #registerCareer').prop('required', true);
                } else {
                    $('#studentFields').slideUp(300);
                    // Quitar el requerido de los campos de estudiante
                    $('#registerCampus, #registerSchedule, #registerCareer').prop('required', false);
                }
            });
            
            // Validación básica de formularios
            $('form').on('submit', function(e) {
                e.preventDefault();
                
                // Validar que las contraseñas coincidan
                if ($('#registerPassword').val() !== $('#registerConfirmPassword').val()) {
                    alert('Las contraseñas no coinciden');
                    return false;
                }
                
                // Aquí iría la lógica real de autenticación
                alert('Formulario enviado. En una implementación real, esto conectaría con el backend.');
            });
            
            // Validar que las contraseñas coincidan en tiempo real
            $('#registerConfirmPassword').on('keyup', function() {
                if ($('#registerPassword').val() !== $('#registerConfirmPassword').val()) {
                    this.setCustomValidity('Las contraseñas no coinciden');
                } else {
                    this.setCustomValidity('');
                }
            });
        });
    </script>
</body>
