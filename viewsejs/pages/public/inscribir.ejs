<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="shortcut icon" href="/iconos/Ciber.ico">


    <title>Cibervoluntarios - Registro</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-flex bg-register-image justify-content-center align-items-center">
                        <img src="/logos/ciber_negro_arriba_abajo.png" class="img-fluid" style="width:80%; height:auto;">
                    </div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h3 text-gray-900 mb-1">Inscripción al evento</h1>
                                
                                <h1 class="h4 text-gray-900 mb-4"><%=Evento.Nombre_actividad%></h1>
                            </div>
                            <form class="user" id="form-inscripcion" action="/inscripcion/<%= Evento.code %>" method="POST">
                                <div class="form-group">
                                    <label for="Nombres">Nombres</label>
                                    <input type="text" class="form-control form-control-user" id="Nombres" name="nombres" placeholder="Nombres" required>
                                </div>

                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label for="ApellidoP">Apellido Paterno</label>
                                    <input type="text" class="form-control form-control-user" id="ApellidoP" name="apellido_p" placeholder="Apellido Paterno" required>
                                    </div>
                                    <div class="col-sm-6">
                                    <label for="ApellidoM">Apellido Materno</label>
                                    <input type="text" class="form-control form-control-user" id="ApellidoM" name="apellido_m" placeholder="Apellido Materno" required>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="Correo">Dirección de correo electrónico</label>
                                    <input type="email" class="form-control form-control-user" id="Correo" name="correo" placeholder="correo@dominio.com" required>
                                </div>

                                <!-- ¿Pertenece a Duoc? -->
                                <div class="mb-3">
                                    <label class="form-label d-block">¿Pertenece a Duoc?</label>
                                    <div class="form-check">
                                    <input class="form-check-input" type="radio" name="pertenece_duoc" id="duoc_si" value="si" required>
                                    <label class="form-check-label" for="duoc_si">Sí</label>
                                    </div>
                                    <div class="form-check">
                                    <input class="form-check-input" type="radio" name="pertenece_duoc" id="duoc_no" value="no" required>
                                    <label class="form-check-label" for="duoc_no">No</label>
                                    <div class="invalid-feedback">Selecciona una opción</div>
                                    </div>
                                </div>

                                <!-- Bloque visible solo si pertenece a Duoc = Sí -->
                                <div id="bloque-duoc" class="d-none">
                                    <div class="form-group">
                                    <label for="tipoSelector">Tipo</label>
                                    <select class="custom-select" id="tipoSelector" name="tipo_duoc">
                                        <option value="" selected disabled>Selecciona tu tipo</option>
                                        <option value="1">Docente</option>
                                        <option value="2">Estudiante</option>
                                        <option value="3">Administrativo</option>
                                        <option value="4">Egresado</option>
                                    </select>
                                    </div>

                                    <div class="form-group">
                                    <label for="sedeSelector">Sede</label>
                                    <select class="custom-select" id="sedeSelector" name="sede_duoc">
                                        <option value="" selected disabled>Selecciona tu sede</option>
                                        <% Sedes.forEach(function(sede) { %>
                                        <option value="<%= sede.cod_sede %>"><%= sede.sede %></option>
                                        <% }); %>
                                    </select>
                                    </div>
                                </div>

                                <!-- Bloque solo si NO pertenece a Duoc -->
                                <div id="bloque-no-duoc" class="d-none">
                                    <div class="mb-3">
                                    <label class="form-label d-block">¿Viene por una Empresa/Organización?</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="empresa_organizacion" id="empresa_organizacion_si" value="si">
                                        <label class="form-check-label" for="empresa_organizacion_si">Sí</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="empresa_organizacion" id="empresa_organizacion_no" value="no">
                                        <label class="form-check-label" for="empresa_organizacion_no">No</label>
                                        <div class="invalid-feedback">Indica una opción</div>
                                    </div>
                                    </div>

                                    <div class="form-group d-none" id="bloque-empresa">
                                    <label for="empresaNombre">Nombre de la Empresa/Organización</label>
                                    <input type="text" class="form-control" id="empresaNombre" name="empresa_nombre" placeholder="Ej: Fundación XYZ">
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary btn-user btn-block">
                                    Inscribirme
                                </button>
                            </form>

                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>


    <script>
    (function() {
        const duocSi = document.getElementById('duoc_si');
        const duocNo = document.getElementById('duoc_no');

        const bloqueDuoc = document.getElementById('bloque-duoc');
        const tipoSelector = document.getElementById('tipoSelector');
        const sedeSelector = document.getElementById('sedeSelector');

        const bloqueNoDuoc = document.getElementById('bloque-no-duoc');
        const empSi = document.getElementById('empresa_organizacion_si');
        const empNo = document.getElementById('empresa_organizacion_no');
        const bloqueEmpresa = document.getElementById('bloque-empresa');
        const empresaNombre = document.getElementById('empresaNombre');

        function resetNoDuoc() {
        // Oculta empresa y limpia
        bloqueEmpresa.classList.add('d-none');
        empresaNombre.value = '';
        empresaNombre.required = false;

        // Limpia selección empresa/organización
        if (empSi) empSi.checked = false;
        if (empNo) empNo.checked = false;
        }

        function resetDuoc() {
        // Limpia selects
        tipoSelector.value = '';
        sedeSelector.value = '';
        tipoSelector.required = false;
        sedeSelector.required = false;
        }

        function onDuocChange() {
        if (duocSi.checked) {
            // Mostrar bloque Duoc
            bloqueDuoc.classList.remove('d-none');
            tipoSelector.required = true;
            sedeSelector.required = true;

            // Ocultar bloque NO Duoc
            bloqueNoDuoc.classList.add('d-none');
            resetNoDuoc();
        } else if (duocNo.checked) {
            // Ocultar bloque Duoc
            bloqueDuoc.classList.add('d-none');
            resetDuoc();

            // Mostrar bloque NO Duoc
            bloqueNoDuoc.classList.remove('d-none');
        }
        }

            function onEmpresaChange() {
            if (empSi && empSi.checked) {
                bloqueEmpresa.classList.remove('d-none');
                empresaNombre.required = true;
            } else if (empNo && empNo.checked) {
                bloqueEmpresa.classList.add('d-none');
                empresaNombre.value = '';
                empresaNombre.required = false;
            }
            }

            // Listeners
            duocSi.addEventListener('change', onDuocChange);
            duocNo.addEventListener('change', onDuocChange);

            if (empSi) empSi.addEventListener('change', onEmpresaChange);
            if (empNo) empNo.addEventListener('change', onEmpresaChange);

            // Inicializa estado por si el navegador recuerda radios
            onDuocChange();
            onEmpresaChange();
        })();
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
    document.getElementById('form-inscripcion').addEventListener('submit', async function(e) {
    e.preventDefault();

    const form = e.currentTarget;
    const url = form.getAttribute('action');
    const formData = new FormData(form);
    
    const data2 = Object.fromEntries(formData.entries());

    try {
        const res = await fetch(url, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(data2)
        });

        const data = await res.json();

        if (data.ok) {
        Swal.fire({
            icon: 'success',
            title: '¡Éxito!',
            text: data.message,
            confirmButtonColor: '#3085d6'
        }).then(() => {
            form.reset();
        });
        } else {
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: data.message,
            confirmButtonColor: '#d33'
        });
        }
    } catch (err) {
        Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'No se pudo enviar la inscripción. Intenta de nuevo.',
        confirmButtonColor: '#d33'
        });
    }
    });
    </script>



</body>

</html>