function formatDateTime(dateString) {
    const d = new Date(dateString);
    const pad = (n) => (n < 10 ? '0' + n : n);

    return (
        d.getFullYear() +
        '-' +
        pad(d.getMonth() + 1) +
        '-' +
        pad(d.getDate()) +
        ' ' +
        pad(d.getHours()) +
        ':' +
        pad(d.getMinutes()) +
        ':' +
        pad(d.getSeconds())
    );
}

